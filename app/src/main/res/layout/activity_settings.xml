<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".profile.SettingsActivity">

    <TextView
        android:id="@+id/activity_settings_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:padding="5dp"
        android:background="@color/cobalt_turquoise"
        android:textColor="@color/white"
        android:text="Settings"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/activity_settings_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/activity_settings_heading"
        app:layout_constraintLeft_toLeftOf="@+id/activity_settings_heading"
        app:layout_constraintBottom_toBottomOf="@+id/activity_settings_heading"
        android:src="@drawable/ic_arrow_back"
        />

