<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad"
        tools:context=".profile.SettingsActivity">

        <TextView
            android:id="@+id/activity_settings_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cobalt_turquoise"
            android:padding="5dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/activity_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="@+id/activity_settings_heading"
            app:layout_constraintLeft_toLeftOf="@+id/activity_settings_heading"
            app:layout_constraintTop_toTopOf="@+id/activity_settings_heading" />



        <Button
            android:id="@+id/activity_settings_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/permanent_red"
            android:text="Logout"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_settings_heading" />

        <TextView
            android:id="@+id/settings_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="FAQs:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_logout"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"
            app:layout_constraintRight_toLeftOf="@id/settings_guideline_right"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Is the app and all it's functions free?"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"
            app:layout_constraintTop_toBottomOf="@+id/settings_faq"
            />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, everything is free."
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"

            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How will it help the environment?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You will be helping the earth by doing as many tasks as possible as they are designed to give the maximum impact on our surroundings. While you may think such small things won't make any impact but you may not that these small things are what create a big influence."
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"
            app:layout_constraintRight_toLeftOf="@id/settings_guideline_right"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are the points calculated?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Everytime you complete a task all you have to is click on the competed button and your points will be automatically added and visible in your profile. The points are currently saved locally."
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"
            app:layout_constraintRight_toLeftOf="@id/settings_guideline_right"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is there any benefit to me?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="The biggest benefit for you would be you would be creating a better environment for yourself as we are the ones who have to live on it and also have a sense of accomplishment that you have done something for the future generations."
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left"
            app:layout_constraintRight_toLeftOf="@id/settings_guideline_right"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Having any other trouble?"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us at environ404@gmail.com"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintLeft_toRightOf="@id/settings_guideline_left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/settings_guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="35dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/settings_guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="35dp" />

        <!--
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/settings_scroll_view"
            app:layout_constraintTop_toBottomOf="@+id/activity_settings_heading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/settings_scroll_view"

                />


            /> -->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>