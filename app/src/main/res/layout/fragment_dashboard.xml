<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad"
        tools:context=".fragments.DashboardFragment">


        <TextView
            android:id="@+id/fragment_dashboard_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard Fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/fragment_dashboard_sort_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            android:backgroundTint="@color/cadmium_orange"
            android:text="SortMe"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/fragment_dashboard_news_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_dashboard_sort_button"
            android:layout_marginTop="10dp"
            android:text="News"
            android:textColor="@color/white"
            android:backgroundTint="@color/peacock_green"
            />

        <Button
            android:id="@+id/fragment_dashboard_aqi_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fragment_dashboard_news_button"
            android:layout_marginTop="10dp"
            android:text="AQI"
            android:textColor="@color/white"
            android:backgroundTint="@color/permanent_red"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>